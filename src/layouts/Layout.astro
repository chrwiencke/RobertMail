---
import HomeButton from '../components/HomeButton.astro';

interface Props {
	title?: string;
	description?: string;
	showHomeButton?: boolean;
	canonicalUrl?: string;
}

const { 
	title = "Temp Mail - Fast, Secure & Private | Do not show me",
	description = "Generate secure, disposable email addresses instantly. Perfect for testing, privacy protection, and avoiding spam. Free, no registration required.",
	showHomeButton = true,
	canonicalUrl = new URL(Astro.url.pathname, 'https://donotshow.me').toString()
} = Astro.props;

const siteUrl = 'https://donotshow.me';
const currentUrl = new URL(Astro.url.pathname, siteUrl).toString();
---

<!doctype html>
<html lang="en" data-theme="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<title>{title}</title>
		<meta name="description" content={description} />
		
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={currentUrl} />
		<meta property="og:site_name" content="Do not show me" />
		
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href={canonicalUrl} />
		
		<meta name="keywords" content="temporary email, disposable email, fake email, email generator, privacy, anti-spam" />
		<meta name="author" content="Do not show me" />
		
		<link rel="stylesheet" href="/styles.css">
		<script src="https://unpkg.com/htmx.org@2.0.4" integrity="sha384-HGfztofotfshcF7+8n44JQL2oJmowVChPTg48S+jvZoztPfvwD79OC/LTtG6dMp+" crossorigin="anonymous"></script>

		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "WebApplication",
			"name": "Temporary Email Generator",
			"description": description,
			"url": Astro.url.toString(),
			"applicationCategory": "UtilityApplication",
			"offers": {
				"@type": "Offer",
				"price": "0",
				"priceCurrency": "USD"
			},
			"featureList": [
				"Instant email generation",
				"No registration required",
				"Secure and private",
				"Free to use"
			],
			"operatingSystem": "All",
			"browserRequirements": "Requires JavaScript"
		})}>
		</script>
		<meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
	</head>
	<body>
		{showHomeButton && <HomeButton />}
		<slot />
		<footer class="footer p-4 bg-base-300 text-base-content">
			<div class="w-full flex justify-between items-center">
				<div class="w-14"></div>
				
				<nav class="flex-1 flex justify-center">
					<ul class="flex gap-4 text-sm items-center flex-wrap justify-center">
						<li><a href="https://short.pludo.org/" rel="noopener noreferrer" target="_blank">Short URL</a></li>
						<li><a href="https://templedns.pludo.org/" rel="noopener noreferrer" target="_blank">Privacy DNS</a></li>
						<li><a href="https://www.privacyguides.org/en/basics/why-privacy-matters/" rel="noopener noreferrer" target="_blank">Why Privacy Matters</a></li>
						<li><a href="/privacy-policy/">Privacy Policy</a></li>
						<li><a href="/terms/">Terms of Use</a></li>
					</ul>
				</nav>
				
				<div class="w-14 flex justify-end">
					<label class="swap swap-rotate">
						<input type="checkbox" class="theme-controller" data-toggle-theme="dark,light" data-act-class="ACTIVECLASS"/>
						<svg class="swap-on fill-current w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"/></svg>
						<svg class="swap-off fill-current w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"/></svg>
					</label>
				</div>
			</div>
		</footer>

		<script src="https://cdn.jsdelivr.net/npm/theme-change@2.5.0/index.js"></script>
	</body>
</html>
